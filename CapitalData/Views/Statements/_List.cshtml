@model List<StatementViewModel>
<h1 class="h2 font-weight-light">
    Recent Statements
</h1>
@if (Model?.Count > 0)
{
    <div class="table-responsive">
        <table id="tbl_statements" class="table table-hover table-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var statement in Model)
                {
                    <tr>
                        <td>
                            <a href="/Members/Details/@statement.member_id">
                                @statement.name (@statement.party-@statement.state)
                            </a>
                        </td>
                        <td>@Convert.ToDateTime(statement.date).ToShortDateString()</td>
                        <td>
                            @Html.Raw(statement.title)
                            <br />
                            <a target="_blank" href="@statement.url" class="text-muted small">
                                @statement.url
                            </a>
                        </td>
                        <td>
                            @statement.statement_type
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-danger">
        There are no recent statments.
    </div>
}