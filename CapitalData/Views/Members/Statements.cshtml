@model MemberStatementsViewModel
@{
    ViewData["Title"] = "Statements";
}


@await Component.InvokeAsync("MemberNavbar", new { member = Model.Member })


<div>
    <h2 class="mb-3 font-weight-light">
        Statments
    </h2>

    @if (Model.Statements?.Count > 0)
    {
        <table class="table table-hover table-sm" id="tbl_statements">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Title
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var statement in Model.Statements)
                {
                <tr>
                    <td>
                        @statement.statement_type
                    </td>
                    <td>
                        @Convert.ToDateTime(statement.date).ToShortDateString()
                    </td>
                    <td>
                        <span class="font-weight-bold">
                            @statement.title
                        </span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="media text-muted pt-3">
            <div class="media-body pb-3 mb-0 lh-125">
                <p class="text-danger">
                    There are been no statements by this member.
                </p>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/Members/Statements.cshtml.js" asp-append-version="true"></script>
    <script>
        MembersStatementsModule.init();
    </script>
}